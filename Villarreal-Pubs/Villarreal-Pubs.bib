	journal = {Journal of Pragmatics},
	author = {Villarreal, Dan},
	year = {2014},
	pages = {1--14},
	file = {Villarreal 2014_Spanish T-V_J of Prag:C\:\\Users\\DAV49\\Zotero\\storage\\QXL7Q76I\\Villarreal 2014_Spanish T-V_J of Prag.pdf:application/pdf},
